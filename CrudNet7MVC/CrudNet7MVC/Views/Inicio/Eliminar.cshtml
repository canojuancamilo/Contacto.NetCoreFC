@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Eliminar contacto";
}

<h1 class="text-center">
    Contacto con .net 7 (.net Core MVC)
</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>¿Esta seguro que desea eliminar el usuario?</strong>
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Eliminar" method="post">
                    @Html.HiddenFor(m=> m.Id)
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Nombre, new { @class = "control-label"})
                        <p class="check-control">
                            @Html.DisplayFor(m=> m.Nombre)
                        </p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Email, new { @class = "control-label"})
                        <p class="check-control">
                            @Html.DisplayFor(m=> m.Email)
                        </p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Telefono, new { @class = "control-label"})
                        <p class="check-control">
                            @Html.DisplayFor(m=> m.Telefono)
                        </p>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Celular, new { @class = "control-label"})
                        <p class="check-control">
                            @Html.DisplayFor(m=> m.Celular)
                        </p>
                    </div>
                    <input type="submit" class="btn btn-danger d-block mx-auto" value="Aceptar" />
                </form>
                <a asp-controller="Inicio" asp-action="Index"> Volver</a>
            </div>
        </div>
    </div>
</div>