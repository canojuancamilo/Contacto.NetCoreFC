@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Editar contacto";
}

<h1 class="text-center">
    Contacto con .net 7 (.net Core MVC)
</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Editar usuario (@Model.Nombre)</strong>
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    @Html.HiddenFor(m=> m.Id)
                    <div asp-validation-summary="ModelOnly" class="text-danger">                        
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Nombre)
                        @Html.TextBoxFor(m=> m.Nombre, new{placeholder="Ingresa el nombre", @class="form-control" })
                        @Html.ValidationMessageFor(m=> m.Nombre, null, new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Telefono)
                        @Html.TextBoxFor(m=> m.Telefono, new{placeholder="Ingresa el telefono", @class="form-control" })
                        @Html.ValidationMessageFor(m=> m.Nombre, null, new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Celular)
                        @Html.TextBoxFor(m=> m.Celular, new{placeholder="Ingresa el celular", @class="form-control" })
                        @Html.ValidationMessageFor(m=> m.Celular, null, new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m=> m.Email)
                        @Html.TextBoxFor(m=> m.Email, new{placeholder="Ingresa el email", @class="form-control" })
                        @Html.ValidationMessageFor(m=> m.Email, null, new{@class="text-danger"})
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto">
                            <i class="bi bi-pencil-fill"></i> Editar usuario
                        </button>
                    </div>
                </form>
                <a asp-controller="Inicio" asp-action="Index"> Volver</a>
            </div>
        </div>
    </div>
</div>
